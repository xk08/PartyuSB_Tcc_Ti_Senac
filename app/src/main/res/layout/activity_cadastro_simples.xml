<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_simples"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.partyusb.CadastroSimplesActivity"
    android:weightSum="1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/brancao"
        android:id="@+id/cadastrosimples_imageview_Logo"
        android:paddingTop="10dp"
        android:background="@android:color/white"
        android:scaleType="center"
        android:layout_weight="0.00"
        android:layout_margin="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp" />

    <TextView
        android:text="Crie seu cadastro de maneira simples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_weight="0.01"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textSize="8pt"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Descricao"
        android:layout_weight="0.00"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:text="Você está na sessão de cadastro rápido, informe os dados abaixo para prosseguir."
        android:textAlignment="center"/>

    <TextView
        android:text="@string/cadastrosimples_textview_NomeSobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_NomeSobrenome"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/cadastrosimples_edittext_NomeSobrenome"
        android:ems="10"
        android:id="@+id/cadastrosimples_edittext_NomeSobrenome"
        android:hint="ex: João Carlos"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Email"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/cadastrosimples_edittext_Email"
        android:text="@string/cadastrosimples_edittext_Email"
        android:hint="ex: exemplo@gmail.com"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_DataDeNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_DataDeNascimento"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/cadastrosimples_edittext_DataDeNascimento"
        android:text="@string/cadastrosimples_edittext_DataDeNascimento"
        android:hint="ex: 06/06/2006"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_Cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Cidade"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_spinner_Cidade"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_Bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Bairro"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_spinner_Bairro"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_Sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Sexo"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_spinner_Sexo"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_Senha"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadastrosimples_edittext_Senha"
        android:text="@string/cadastrosimples_edittext_Senha"
        android:hint="Informe uma Senha Segura"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="@string/cadastrosimples_textview_ConfirmarSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_textview_ConfirmarSenha"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadastrosimples_edittext_ConfirmarSenha"
        android:text="@string/cadastrosimples_edittext_ConfirmarSenha"
        android:hint="Confirme a Senha Escolhida"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp" />

    <CheckBox
        android:text="@string/cadastrosimples_checkbox_TermosDeUso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_checkbox_TermosDeUso"
        android:layout_margin="10dp" />

    <Button
        android:text="@string/cadastrosimples_button_Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrosimples_button_Cadastrar"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.00"
        android:textColor="?attr/colorPrimaryDark" />

    <TextView
        android:text="@string/cadastrosimples_textview_CadastroCompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0358c0"
        android:id="@+id/cadastrosimples_textview_CadastroCompleto"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="#Partyu-SB  Desenvolvido por Marcos Martins   2016"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cadastrosimples_textview_Rodape"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"/>

</LinearLayout>

</ScrollView>
