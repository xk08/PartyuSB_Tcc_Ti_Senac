<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primeira_tela"
    tools:context="com.example.aluno.partyusb.PrimeiraTelaActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
        android:text="Seja Bem Vindo ao #PartyuSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primeiratela_textview_texto1"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="9pt"
        android:fontFamily="monospace" />

        <TextView
            android:text="Agora você pode visualizar os eventos que estão acontecendo em sua cidade e tornar-se um  organizador divulgando para todas as pessoas seus eventos."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/primeiratela_textview_texto2"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:textSize="7pt"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif" />

        <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/prozera"
        android:id="@+id/primeiratela_imagemview_logo"
        android:adjustViewBounds="false"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="170dp" />

    <TextView
        android:text="Já é participante? Faça seu Login Agora Mesmo."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primeiratela_textview_Login"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center" />

    <Button
        android:text="Logar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primeiratela_button_Login"
        android:layout_weight="0.05"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:textColor="?attr/colorPrimaryDark" />

    <TextView
        android:text="É novo por aqui? Crie já sua conta."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primeiratela_textview_Cadastrar"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

        <Button
            android:text="Cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/primeiratela_button_Cadastro"
            android:layout_weight="0.06"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:textColorLink="?attr/colorPrimaryDark"
            android:textColor="?attr/colorPrimaryDark" />

        <TextView
        android:text="#Partyu-SB  Desenvolvido por Marcos Martins   2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primeiratela_textview_Rodape"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center" />
    </LinearLayout>

</ScrollView>
