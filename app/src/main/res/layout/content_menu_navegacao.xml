<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu_navegacao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aluno.partyusb.MenuNavegacaoActivity"
    tools:showIn="@layout/app_bar_menu_navegacao">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/bugadao"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Maneira fácil e prática de anunciar eventos "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="51dp"
        android:fontFamily="serif"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Organize seu evento e divulgue para as pessoas. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:fontFamily="serif"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/semmeio"
        android:id="@+id/imageView5"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80dp"
        app:srcCompat="@mipmap/comborda"
        android:id="@+id/imageView4"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="31dp"
        android:layout_height="70dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
