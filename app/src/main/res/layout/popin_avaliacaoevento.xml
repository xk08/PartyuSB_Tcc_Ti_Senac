<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/popin_textview_AvaliacaoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popin_textview_AvaliacaoEvento"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textAlignment="center"/>

        <TextView
            android:text="@string/popin_textview_AvaliacaoEventoDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popin_textview_AvaliacaoEventoDescricao"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="@string/popin_textview_NotaEvento"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:id="@+id/popin_textview_NotaEvento"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popin_ratingbar_NotaEvento"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="@string/popin_textview_EventoComentario"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:id="@+id/popin_textview_EventoComentario"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/popin_edittext_ComentarioEvento"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.53"
            android:hint="MÃ¡ximo xx Caracteres" />

        <Button
            android:text="@string/popin_button_AvaliarEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popin_button_AvaliarEvento"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</ScrollView>
