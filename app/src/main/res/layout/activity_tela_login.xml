<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.partyusb.TelaLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:srcCompat="@mipmap/comborda"
                    android:id="@+id/telalogin_imageview_Logo"
                    android:layout_marginBottom="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:text="FaÃ§a login para utilizar as funcionalidades do aplicativo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_textview_Descricao"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"/>


                <TextView
                    android:text="Informe seu E-mail:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_textview_Login"
                    android:layout_weight="0.03"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/telalogin_edittext_Login"
                    android:ems="10"
                    android:id="@+id/telalogin_edittext_Login"
                    android:layout_weight="0.03"
                    android:hint="exemplo@gmail.com"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:text="@string/telalogin_textview_Senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_textview_Senha"
                    android:layout_weight="0.03"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/telalogin_edittext_Senha"
            android:layout_weight="0.03"
            android:text="@string/telalogin_edittext_Senha"
            android:hint="********"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp" />

        <TextView
                    android:text="@string/telalogin_textview_EsqueceuSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_textview_EsqueceuSenha"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColorLink="@color/colorPrimary"
                    android:textAlignment="center"/>

                <CheckBox
                    android:text="@string/telalogin_checkbox_ManterConectado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_checkbox_ManterConectado"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp" />

                <Button
                    android:text="Logar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_button_Logar"
                    android:layout_weight="0.06"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="?attr/colorPrimaryDark" />

        <TextView
                    android:text="#Partyu-SB  Desenvolvido por Marcos Martins   2016"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/telalogin_textview_Rodape"
                    android:layout_weight="0.05"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</ScrollView>
